<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.2//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>
	<field name="paramMap.sortIndex">
		<field-validator type="requiredstring">
			<message>排序不能为空</message>
		</field-validator>
	</field>
	<field name="paramMap.name">
		<field-validator type="requiredstring">
			<message>问题名称不能为空</message>
		</field-validator>
	</field>
	
	<field name="paramMap.solution">
		<field-validator type="requiredstring">
			<message>答案不能为空</message>
		</field-validator>
	</field>
	<field name="paramMap.addTime">
		<field-validator type="requiredstring">
			<message>添加时间不能为空</message>
		</field-validator>
	</field>
	<field name="paramMap.status">
		<field-validator type="requiredstring">
			<message>请选择是否显示</message>
		</field-validator>
		<field-validator type="fieldexpression">
			<param name="expression">
				<![CDATA[
	   					(paramMap.status != "-1")
	   				]]>
			</param>
			<message>请选择是否显示</message>
		</field-validator>
	</field>
	
</validators>