<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
     <struts>
	<package name="banner" extends="admin-default" namespace="/admin">
	
	 <action name="queryBannerInit"
			class="bannerAction" method="queryBannerInit">
			<result name="success">
				/WEB-INF/page/admin/banner_index.jsp
			</result>
		</action>
		
		<action name="queryBanner" class="bannerAction"
			method="queryBanner">
			<result name="success">
				/WEB-INF/page/admin/banner_index_info.jsp
			</result>
		</action>	
		
		<action name="addBannerInit" class="bannerAction"
			method="addBannerInit">
			<result name="success">
				/WEB-INF/page/admin/banner_add.jsp
			</result>
		</action>
		<action name="addBanner" class="bannerAction"
			method="addBanner">
			<result name="input">
				/WEB-INF/page/admin/banner_add.jsp
			</result>
			<result name="success" type="redirect">
				queryBannerInit.do
			</result>
		</action>
		
		<action name="updateBannerInit" class="bannerAction"
			method="updateBannerInit">
			<result name="success">
				/WEB-INF/page/admin/banner_update.jsp
			</result>
		</action>
		<action name="updateBanner" class="bannerAction"
			method="updateBanner">
			<result name="input">
				/WEB-INF/page/admin/banner_update.jsp
			</result>
			<result name="success" type="redirect">
				queryBannerInit.do?pageNow=%{pageNow}
			</result>
		</action>
		<action name="deleteBanner" class="bannerAction"
			method="deleteBanner">
			<result name="input">
				queryBannerInit.do
			</result>
			<result name="success" type="redirect">
				queryBannerInit.do?pageNow=%{pageNow}
			</result>
		</action>
	</package>
</struts>