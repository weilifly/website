<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="advertisement" extends="admin-default" namespace="/admin">
	
		<action name="queryAdvertisementInit" class="advertisementAction" method="queryAdvertisementInit">
			<result name="success">/WEB-INF/page/admin/advertisement_index.jsp</result>
		</action>
		
		<action name="queryAdvertisementInfo" class="advertisementAction" method="queryAdvertisementInfo">
			<result name="success">/WEB-INF/page/admin/advertisement_index_info.jsp</result>
		</action>
		
		<action name="addAdvertisementInit" class="advertisementAction" method="addAdvertisementInit">
			<result name="success">/WEB-INF/page/admin/advertisement_add.jsp</result>
		</action>
		
		<action name="addAdvertisement" class="advertisementAction" method="addAdvertisement">
		</action>
		
		<action name="updateAdvertisementInit" class="advertisementAction" method="updateAdvertisementInit">
			<result name="success">/WEB-INF/page/admin/advertisement_update.jsp</result>
		</action>
		
		<action name="updateAdvertisement" class="advertisementAction" method="updateAdvertisement">
		</action>
		
		<action name="deleteAdvertisement" class="advertisementAction" method="deleteAdvertisement">
		</action>
		
	</package>
</struts>
